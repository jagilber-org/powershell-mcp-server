{
  "name": "powershell-mcp-server",
  "version": "1.3.2",
  "description": "MCP-compliant PowerShell server with enterprise security and hierarchical tool structure",
  "main": "dist/mcpServer.js",
  "type": "module",
  "scripts": {
    "build:only": "tsc",
    "build": "npm run build:only && jest --config config/jest.config.cjs --runInBand",
    "dev": "npm run build && node dist/index.js",
    "start": "node dist/mcpServer.js",
    "start:enterprise": "node dist/mcpServer.js",
    "inspector": "npx @modelcontextprotocol/inspector node dist/index.js",
    "clean": "rmdir /s /q dist 2>nul & mkdir dist",
    "compliance:check": "powershell -ExecutionPolicy Bypass -File scripts/Simple-MCPCheck.ps1",
    "compliance:report": "powershell -ExecutionPolicy Bypass -File scripts/Check-MCPCompliance.ps1 -SaveReport",
    "precommit": "npm run compliance:check && npm run build",
    "health": "powershell -ExecutionPolicy Bypass -File scripts/health-check.ps1",
    "stats:codebase": "powershell -ExecutionPolicy Bypass -File tools/codebase-stats.ps1",
    "baseline:daily": "npm run stats:codebase",
    "enumerate:external": "powershell -ExecutionPolicy Bypass -File tools/enumerate-external-tests.ps1 -OutputJson",
    "check:stubs": "node scripts/check-stub-tests.mjs --strict",
    "test:jest": "npm run build:only && jest --config config/jest.config.cjs --runInBand",
    "pretest:jest": "node scripts/cleanup-legacy-psmetrics-tests.mjs"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "commander": "^12.1.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.0.0",
  "jest": "^29.7.0",
  "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  }
}
