{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["src/index.ts", "src/server.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "src/vscode-server.ts", "src/server-*.js", "src/extension.*", "src/test-*"]
}
